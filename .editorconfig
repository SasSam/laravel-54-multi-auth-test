# top-most EditorConfig file
root = true

[*]
end_of_line = crlf
insert_final_newline = false
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Indentation override for all JS CSS, LESS and .config files
[*.{js,css,less,.config}]
indent_style = space
indent_size = 2

[{package.json}]
indent_style = space
indent_size = 2
